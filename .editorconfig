root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
indent_style = space
indent_size = 2  # Google C++ Style Guide prefers 2 spaces for indentation
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.cpp,*.h]
indent_size = 2
block_indent = 2
continuation_indent = 4  # For line continuations, Google C++ Style Guide recommends 4 spaces
